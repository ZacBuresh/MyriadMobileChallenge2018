<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sam01.final_project">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/myriad_icon"
        android:label="Final_Project"
        android:roundIcon="@mipmap/myriad_icon_round"
        android:supportsRtl="true">
        <activity
            android:name=".activity.EventList"
            android:label="Events"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="Login Screen"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".activity.EventDetails"
            android:label="Event Details"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>